{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">
        <h3>{{ page_heading_2 }}</h3>
        <form action="{{ actionSend }}" method="post">
            <fieldset>
                <legend>Send Message</legend>
                {% if(error != false) %}
                    <p class="error">{{ error }}</p>
                {% else %}
                    <br>
                {% endif %}
                <label for="username">Username:</label>
                <input id="username" name="username" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <label for="password">Password:</label>
                <input id="password" name="password" type="password" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <label for="msisdn">Device MSISDN:</label>
                <input id="msisdn" name="msisdn" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <label for="deliveryButton">Delivery reports:</label>
                <input id="deliveryButton" name="deliveryButton" type="radio" value="deliveryReports">
                <br><br>
                <label for="message">Message:</label>
                <input id="message" name="message" type="text" value="{{ initial_input_box_value }}" size="50" maxlength="200">
                <br><br>

                <br>
                <input type="submit" value="Send">
            </fieldset>
        </form>


        <p class="curr_page"><a href="{{ landing_page }}">Home</a></p>
    </div>
{% endblock %}
