{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">
        <h3>{{ page_heading_2 }}</h3>
        <form action="{{ action1 }}" method="post">
            <fieldset>
                <legend>Login details</legend>
                {% if(error != false) %}
                    <p class="error">{{ error }}</p>
                {% elseif(message != false) %}
                    <p class="message">{{ message }}</p>
                {% else %}
                    <br>
                {% endif %}
{#                {% if(message != false) %}#}
{#                    <p class="message">{{ message }}</p>#}
{#                {% endif %}#}
                <label for="username">Username:</label><br>
                <input id="username" name="username" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <label for="password">Password:</label><br>
                <input id="password" name="password" type="password" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
{#                <h3>{{ page_heading_3 }}</h3>#}
                <br>
                <input type="submit" value="Login">
            </fieldset>
        </form>
        <form action="{{ action2 }}">
            <p class="reg"><label>Not registered yet?</label><br>
            <input type="submit" value="Register here!">
        </form>
    </div>
{% endblock %}
